<!--Displays a form for editing an existing post using a Bootstrap card layout-->
<!--uses Rails form_with helper bound to the selected post record-->
<!--allows updating the post title and body fields-->
<!--includes an update button to save changes-->
<!--provides a back link to return to the posts list-->
<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h2>Edit Post</h2>
    </div>
    <div class="card-body">
      <%= form_with(model: @post, local: true) do |form| %>
        <div class="mb-3">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :body, class: "form-label" %>
          <%= form.text_area :body, rows: 5, class: "form-control" %>
        </div>

        <%= form.submit "Update Post", class: "btn btn-primary" %>
        <%= link_to "Back", posts_path, class: "btn btn-secondary ms-2" %>
      <% end %>
    </div>
  </div>
</div>
