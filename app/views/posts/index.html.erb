<!--displays  a list of posts in a Bootstrap-styled table layout-->
<!--iterates through all posts and shows title and truncated body-->
<!--provides show and edit links for each post-->
<!--includes a delete button with confirmation to prevent accident deletion-->
<!--adds a new post button for creating additional posts-->
<div class="container mt-5">
  <h2>Posts</h2>
  <%= link_to "New Post", new_post_path, class: "btn btn-success mb-3" %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= truncate(post.body, length: 50) %></td>
          <td>
            <%= link_to "Show", post, class: "btn btn-primary btn-sm" %>
            <%= link_to "Edit", edit_post_path(post), class: "btn btn-warning btn-sm" %>
            <%= button_to "Delete", post_path(post),
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: "btn btn-danger btn-sm",
                form: {style: "display:inline;" } %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
