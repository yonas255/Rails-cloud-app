<div class="container mt-5">
  <h2>Posts</h2>
  <%= link_to "New Post", new_post_path, class: "btn btn-success mb-3" %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= truncate(post.body, length: 50) %></td>
          <td>
            <%= link_to "Show", post, class: "btn btn-primary btn-sm" %>
            <%= link_to "Edit", edit_post_path(post), class: "btn btn-warning btn-sm" %>
            <%= link_to "Delete", post_path(post),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "btn btn-danger btn-sm" %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
